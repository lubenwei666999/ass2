    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/User.cshtml";
}
<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Booking successful</title>
    <!-- Introduces the Bootstrap style file -->
    <link href="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Css/footer.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
          integrity="sha512-600Fv/q0ZcXqMY1u8tZIlR2V4HtoZxeUZ03+7+6kyczJN2pCgTidW0SleK8AnuXzHnQM7cyzrR6imRmSlThQdA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            background: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url(../../img/pexels-pixabay-260922.jpg);
        }

        .all {
            width: 70%;
            margin: 0 auto;
            margin-top: 70px;
            display: flex;
        }

        .container {
            border-radius: 10px;
            padding: 20px 0;
            background: white;
        }
    </style>
</head>

<body>
    <div class="all">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="mt-5 text-center">
                        <svg t="1684478534674" class="icon" viewBox="0 0 1024 1024" version="1.1"
                             xmlns="http://www.w3.org/2000/svg" p-id="2557" width="64" height="64">
